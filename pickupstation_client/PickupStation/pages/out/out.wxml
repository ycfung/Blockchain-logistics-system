<!--pages/out/out.wxml-->
<view wx:if="{{!permission}}" class="page">
  <view class="page__hd"></view>
  <view class="page__bd">
    <view class="icon-box">
            <icon type="info" size="64" style=""></icon>
            <view class="icon-box__ctn">
                <view class="icon-box__title">提示</view>
                <view class="icon-box__desc">您暂时没有权限</view>
            </view>
        </view>
  </view>
</view>
<view wx:else>
<form bindsubmit="formSubmit" >
<view class="page">
  <view class="page__hd">
      <view class="page__title">出库验证</view>
      <view class="page__desc">通过验证可取走货物</view>
  </view>
  <view class="page__bd page__bd_spacing">
    <view class="page__ft">
        <view class="weui-cells weui-cells_after-title">
          <view class="weui-cell ">
            <input name="pNumber" class="weui-input" placeholder="请输入货单号" />
          </view>
        </view>
        <view class="weui-btn-area">
            <button class="weui-btn" form-type="submit">确定</button>
        </view>
    </view>
  </view>
</view>
</form>
</view>